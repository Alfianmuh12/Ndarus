<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ndarus.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_compass"
        android:name="com.example.ndarus.CompassFragment"
        android:label="@string/title_compass"
        tools:layout="@layout/fragment_compass"/>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.ndarus.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.ndarus.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting"/>

</navigation>